<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?listPreferredItemHeight"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="?selectableItemBackground"
        android:paddingStart="?android:listPreferredItemPaddingStart"
        android:paddingEnd="?android:listPreferredItemPaddingEnd">

    <ImageView
            android:id="@+id/imagePoster"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="2:3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:src="@color/colorPrimary"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginBottom="@dimen/spacing_normal"/>

    <TextView
            android:id="@+id/textMovieTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnDelete"
            app:layout_constraintStart_toEndOf="@+id/imagePoster"
            android:layout_marginStart="@dimen/spacing_medium"
            app:layout_constraintBottom_toTopOf="@+id/textReminderDate"
            app:layout_constraintVertical_chainStyle="packed"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/Text.Normal"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/textReminderDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textMovieTitle"
            app:layout_constraintEnd_toEndOf="@+id/textMovieTitle"
            app:layout_constraintStart_toStartOf="@+id/textMovieTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/Text.Small"
            android:drawablePadding="@dimen/spacing_normal"/>

    <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_delete"
            android:background="?selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/spacing_normal"/>

</androidx.constraintlayout.widget.ConstraintLayout>