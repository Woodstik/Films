<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:theme="@style/AppTheme"
        android:background="@color/colorWindowBackground">

    <TextView
            android:id="@+id/textSaveTo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/btnCreateList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/btnCreateList"
            app:layout_constraintEnd_toStartOf="@+id/btnCreateList"
            android:textAppearance="@style/Text.Medium"
            android:layout_marginStart="@dimen/spacing_medium"
            android:textStyle="bold"
            android:text="@string/save_movie_to"/>

    <Button
            android:id="@+id/btnCreateList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/btn_new_list"
            style="@style/Button.Borderless.Colored"
            android:layout_marginEnd="@dimen/spacing_medium"/>

    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCreateList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorDivider"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listUserLists"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>