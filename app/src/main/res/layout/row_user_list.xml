<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?listPreferredItemHeight"
        android:paddingStart="@dimen/spacing_normal"
        android:paddingEnd="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_normal"
        android:paddingBottom="@dimen/spacing_normal"
        android:background="?selectableItemBackground">

    <ImageView
            android:id="@+id/imageMovieList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:textAppearance="@style/Text.Normal"
            android:textStyle="bold"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_movie_list"
            android:background="@drawable/bg_user_list"/>

    <TextView
            android:id="@+id/textListTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imageMovieList"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textMovieCount"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/spacing_normal"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginStart="@dimen/spacing_normal"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/Text.Normal"
            tools:text="Favorites List"/>

    <TextView
            android:id="@+id/textMovieCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imageMovieList"
            app:layout_constraintTop_toBottomOf="@+id/textListTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/spacing_normal"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginStart="@dimen/spacing_normal"
            android:textAppearance="@style/Text.Small"
            tools:text="0 Movies"/>
</androidx.constraintlayout.widget.ConstraintLayout>
