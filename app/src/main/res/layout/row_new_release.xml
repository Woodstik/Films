<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="@dimen/upcoming_movies_width"
        android:layout_height="@dimen/upcoming_movies_height"
        android:layout_marginBottom="@dimen/spacing_nano"
        app:cardCornerRadius="@dimen/radius_card">

    <ImageView
            android:id="@+id/imageBackdrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:foreground="@drawable/bg_gradient"
            android:scaleType="centerCrop"
            tools:src="@color/colorPrimary"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/spacing_normal">

        <TextView
                android:id="@+id/textNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.Normal.Inverse"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/bg_item_number"
                android:padding="@dimen/spacing_normal"
                tools:text="1/10"/>

        <TextView
                android:id="@+id/textTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                style="@style/Text.Medium.Inverse"
                app:layout_constraintBottom_toTopOf="@+id/textReleaseDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Movie Name"/>

        <TextView
                android:id="@+id/textReleaseDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Text.Small.Inverse"
                app:layout_constraintBottom_toTopOf="@+id/textDescription"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="November 5, 2017"/>

        <TextView
                android:id="@+id/textDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                style="@style/Text.Normal.Inverse"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Movie overview goes here"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
